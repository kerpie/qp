#category_group.accordion-group
	.accordion-heading
		=link_to "#cat_#{cat.id}", class: "accordion-toggle", data: {toggle: "collapse", parent: "#accordion3", id: "#{cat.id}"} do
			=cat.name.capitalize
	.accordion-body.collapse{ id: "cat_#{cat.id}"}
		.accordion-inner
			%ul
				%li
					=link_to "Mostrar", category_show_path(cat.id), remote: true
				%li
					=link_to "Editar", "#update_category_form", role: "button", data: {toggle: "modal"}
				%li
					=link_to "Eliminar", category_destroy_path(cat.id), remote: true, class: "destroy_link", data: { confirm: "Una vez eliminado no podra recuperarse. Est√° seguro de continuar?"}