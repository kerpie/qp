.page_container
	%h6
		=link_to "Tu cuponera virtual", "#"

	%h1
		Tipos de cupones

	%table.table.table-striped#coupon_types_table
		%tr
			%th
				\#
			%th
				Nombre
			%th{colspan: 2}
				Opciones
		- @coupon_types.each.with_index(1) do |ct, index|
			=render "coupon_type_item", ct: ct, index: index

	=link_to "Crear nuevo tipo", "#new_coupon_type_form", role: "button", class: "btn", data:{toggle: "modal"}

=form_tag coupon_types_create_path, remote: true do
	#new_coupon_type_form.modal.hide.fade{ tabindex: "-1", role: "dialog", aria: {labelledby: "myModalLabel", hidden: "true"}}
		.modal-header
			=button_tag "×", type: :button, class: :close, data: {dismiss: "modal"}, aria: {hidden: "true"}
			%h3#myModalLabelModal 
				Nuevo tipo de cupon
		.modal-body
			.coupon_state_part
				=label_tag :coupon_type_new_name, "Nombre: "
				=text_field_tag :coupon_type_new_name
		.modal-footer
			=button_tag "Cerrar", id: "coupon_types_new_close_button",  class: "btn", data: {dismiss: "modal"}, aria: {hidden: "true"}
			=submit_tag "Guardar cambios", class: "btn btn-primary" 

=form_tag coupon_types_update_path, remote: true do
	#update_coupon_type_form.modal.hide.fade{ tabindex: "-1", role: "dialog", aria: {labelledby: "myModalLabel", hidden: "true"}}
		.modal-header
			=button_tag "×", type: :button, class: :close, data: {dismiss: "modal"}, aria: {hidden: "true"}
			%h3#myModalLabelModal 
				Actualizar tipo de cupon
		.modal-body
			=hidden_field_tag "ct_id", value: -1
			.coupon_state_part
				=label_tag :new_coupon_type_name, "Nuevo tipo de cupón:"
				=text_field_tag :new_coupon_type_name
		.modal-footer
			=button_tag "Cerrar", id: "coupon_types_update_close_button", class: "btn", data: {dismiss: "modal"}, aria: {hidden: "true"}
			=submit_tag "Guardar cambios", class: "btn btn-primary" 